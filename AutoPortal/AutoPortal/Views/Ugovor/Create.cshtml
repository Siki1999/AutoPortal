@model AutoPortal.Models.Ugovor
@{
    ViewBag.Title = "Dodavanje - Auto Portal";
    Layout = null;
}

<div class="modal-dialog" id="formEdit">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
            <h4 class="modal-title text-center">Kreiraj</h4>
        </div>

        @using (Ajax.BeginForm("Create", "Ugovor", new AjaxOptions { HttpMethod = "POST", OnSuccess = "UgovorSuccess", UpdateTargetId = "formEdit" }, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body" style="text-align:center;width: 400px; margin-left: auto; margin-right:auto;">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Ispravite podatke!!", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdUgovor)

                <div class="form-group">
                    @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Mail_Ug, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mail_Ug, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Vrijeme_Od, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Vrijeme_Od, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Vrijeme_Od, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Vrijeme_Do, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Vrijeme_Do, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Vrijeme_Do, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div>
                    <button type="button" class="btn btn-info" data-dismiss="modal" style="margin-right:68%">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>   Nazad
                    </button>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Kreiraj
                    </button>
                </div>
            </div>
        }
    </div>
</div>
