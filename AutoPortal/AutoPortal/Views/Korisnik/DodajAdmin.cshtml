@using AutoPortal.Models
@model Korisnik
@{
    ViewBag.Title = "Dodaj admin - Auto Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/CSS/StyleSheet.css" rel="Stylesheet" type="text/css" />

    <div class="container" style="text-align:center;width:500px; margin-left:auto; margin-right:auto;">
        <div class="text-center" style="font-style:italic">
            <h1 class="wrapper">Dodaj admina</h1>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Dodavanje admina</h4>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.KorisnickoIme, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                    <div class="col-md-8 col-md-offset-1">
                        @Html.EditorFor(model => model.KorisnickoIme, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                    <div class="col-md-8 col-md-offset-1">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Prezime, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                    <div class="col-md-8 col-md-offset-1">
                        @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                    <div class="col-md-8 col-md-offset-1">
                        @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LozinkaUnos, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                    <div class="col-md-8 col-md-offset-1">
                        @Html.EditorFor(model => model.LozinkaUnos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LozinkaUnos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LozinkaUnos2, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                    <div class="col-md-8 col-md-offset-1">
                        @Html.EditorFor(model => model.LozinkaUnos2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LozinkaUnos2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SifraOvlasti, new { @class = "col-sm-2 control-label col-md-offset-1 hidden" })
                    <div class="col-md-8 col-md-offset-1">
                        @Html.DropDownListFor(model => model.SifraOvlasti,
                                    new SelectList(ViewBag.Ovlasti, "Sifra", "Naziv", "AD"), new { @class = "form-control hidden" })
                    </div>
                </div>

                <div class="row" style="margin-top:20px">
                    <div class="col-md-6">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-info">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>   Nazad
                        </a>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-success">
                                    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span>  Spremi
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
