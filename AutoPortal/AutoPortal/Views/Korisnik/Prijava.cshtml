@model AutoPortal.Models.KorisnikPrijava
@{
    ViewBag.Title = "Prijava korisnika - Auto Portal";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/CSS/StyleSheet.css" rel="Stylesheet" type="text/css" />
</head>
<body style="background-color:dimgrey">
    <div class="container" style="text-align:center;width:500px; margin-left:auto; margin-right:auto;">
        <div style="background-color:#AEAEAE;box-shadow:1px 1px 10px 10px">
            <div class="text-center" style="font-style:italic">
                <h1 class="wrapper">Prijava</h1>
            </div>
            @using (Html.BeginForm("Prijava", "Korisnik", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Prijava korisnika</h4>
                    <hr />

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.KorisnickoIme, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                        <div class="col-md-8 col-md-offset-1">
                            @Html.EditorFor(model => model.KorisnickoIme, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Lozinka, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                        <div class="col-md-8 col-md-offset-1">
                            @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-8 col-sm-4">
                            <button type="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Prijava
                            </button>
                        </div>
                    </div>

                </div>
            }
        <br />
        </div>
    </div>


</body>
</html>

