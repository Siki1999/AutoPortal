@using AutoPortal.Models
@model Auto
@{
    ViewBag.Title = "Dodaj novi auto - Auto Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/CSS/StyleSheet.css" rel="Stylesheet" type="text/css" />

<div class="text-center" style="font-style:italic">
    <h1 class="wrapper">Dodavanje auta</h1>
</div>

<div class="container" style="text-align:center;width: 400px; margin-left: auto; margin-right:auto;">
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "Ispravite podatke!");

        <div class="form-group" style="margin-top:30px">
            @Html.LabelFor(model => model.Marka, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Marka, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Marka, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Model, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Obujam, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Obujam, "{0:#.#}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Obujam, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Snaga, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Snaga, "{0:#.#}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Snaga, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Kilaza, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Kilaza, "{0:#.#}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Kilaza, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Max_Brzina, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Max_Brzina, "{0:#.#}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Max_Brzina, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ubrzanje, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Ubrzanje, "{0:#.#}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ubrzanje, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cijena, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Cijena, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cijena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row" style="margin-top:20px">
            <div class="col-md-6">
                <a href="@Url.Action("Index", "Home")" class="btn btn-info">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>   Nazad
                </a>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span>  Spremi
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



