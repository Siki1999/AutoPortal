@using AutoPortal.Models
@model Auto
@{
    ViewBag.Title = "Dodaj Logo - Auto Portal";
    Layout = null;
}

<div class="modal-dialog" id="formEdit">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
            <h4 class="modal-title text-center">Dodaj Logo</h4>
        </div>

        @using (Html.BeginForm("DodajLogo", "Home", FormMethod.Post, new { enctype = "multipart/form-data"}))
        {
            <div class="modal-body" style="text-align:center;width: 400px; margin-left: auto; margin-right:auto;">
                <div class="form-group">
                    @Html.HiddenFor(model => model.Marka)
                </div>
                <div class="form-group" style="margin-top:30px;margin-left:28%">
                    <input type="file" name="file" />
                </div>
            </div>
            <div class="modal-footer">
                <div>
                    <button type="button" class="btn btn-info" data-dismiss="modal" style="margin-right:68%">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>   Nazad
                    </button>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Spremi
                    </button>
                </div>
            </div>
        }
    </div>
</div>